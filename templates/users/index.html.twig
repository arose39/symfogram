{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}

    <form action="#" method="get">
        <div class="mb-3">
            <label for="firstName" class="form-label">first name</label>
            <input name="firstName"
                   type="text" class="form-control" id="firstName" value="{{ request.query.get('firstName') }}"
                   placeholder="Type first name">
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">last name</label>
            <input name="lastName" type="text" class="form-control" id="lastName"
                   value="{{ request.query.get('lastName') }}" placeholder="Type last name">
        </div>
        <div class="mb-3">
            <label for="nickname" class="form-label">last name</label>
            <input name="nickname" type="text" class="form-control" id="nickname"
                   value="{{ request.query.get('nickname') }}" placeholder="Type last name">
        </div>
        <button type="submit" value="search" class="btn btn-primary">Search</button>
    </form>

    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('profile', {'nickname':user.nickname}) }}">
                    {{ user.firstName }}  {{ user.lastName }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
